/* 搜索框 */
.local {
  display: flex;
  width: 90%;
  background-color: #fff;
  height: 80rpx;
  margin: 0 auto;
  margin-top: -40rpx;
  border-radius: 60rpx;
  align-content: center;
}

.local image {
  width: 50rpx;
  height: 50rpx;
}

.local .img_xy {
  margin-top: 17rpx;
  margin-left: 27rpx;
}
.local .img_change {
  margin-top: 13rpx;
  margin-left: 32rpx;
}

.local .select-content {
  width: 70%;
  margin-top: 20rpx;
  margin-left: 27rpx;
  color: #ffd23c;
}


page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #f6f6f6;
}

.van-dropdown {
  background-color: aqua;
