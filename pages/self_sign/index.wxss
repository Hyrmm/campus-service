/* pages/self_sign/index.wxss */

/* 通用 */
page {
  display: flex;
  flex-direction: column;
  background-color: #f6f6f6;
  --nav-bar-icon-color: #fff;
  background-color: #fff;
}

.container {
  width: 80%;
  margin: 70rpx auto;
}






/* 创建or开始签到 */
.start_sign,
.create_sign {
  display: flex;
  justify-content: space-between;
  background-color: #F9F8FE;
  padding: 30rpx 30rpx;
  border-radius: 30rpx;
  margin-top: 30rpx;
}

.start_sign .icon,
.create_sign .icon {
  background-color: #657AFF;
  color: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 40rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  justify-content: center;
  font-size: 90rpx;
}

.start_sign .title,
.create_sign .title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  flex: 1;
  font-size: 40rpx;
  font-weight: bolder;
  padding-left: 30rpx;

}

.start_sign .arrow,
.create_sign .arrow {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: 50rpx;
  color: #657AFF;
}



/* 样式覆盖 */
.van-count-down {
  display: flex;
}

.van-nav-bar {
  background-color: #757BFF !important;
}

.van-nav-bar__title {
  color: #fff !important;
}

.van-nav-bar__text {
  color: #fff !important;
}