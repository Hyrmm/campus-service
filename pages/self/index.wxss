/* 公共样式 */
.clear {
  clear: both;
}


/* 内部样式 */
.top-bg {
  width: 100%;
  height: 350rpx;
}

.self-container {
  background-color: #f7f8fa;
  border-radius: 20rpx;
  position: relative;
  top: -100rpx;
  padding-bottom: 450rpx;
}





.avatar-container {
  width: 240rpx;
  height: 240rpx;
  border-radius: 120rpx;
  background-color: #ffff;
  position: relative;
  top: -80rpx;
  left: 50rpx;
}

.avatar-img {
  width: 222rpx;
  height: 222rpx;
  border-radius: 110rpx;
  position: relative;
  top: 10rpx;
  left: 10rpx;
}

.avatar-name {
  margin-top: 30rpx;
  margin-left: 100rpx;
  font-size: large;
}